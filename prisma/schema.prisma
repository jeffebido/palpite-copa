generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model usuarios {
  id      Int        @id @default(autoincrement())
  nome    String
  email   String     @unique
  palpite palpites[]
}

model jogos {
  id             Int        @id @default(autoincrement())
  placarCasa     String
  placarFora     String
  abertoPalpites String
  palpite        palpites[]
}

model palpites {
  id          Int      @id @default(autoincrement())
  palpiteCasa String
  palpiteFora String
  jogoId      Int
  userId      Int
  createdAt   DateTime @default(now())
  jogo        jogos    @relation(fields: [jogoId], references: [id])
  usuario     usuarios @relation(fields: [userId], references: [id])
}
